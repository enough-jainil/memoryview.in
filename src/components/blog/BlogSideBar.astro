<aside>
  <nav class='hidden lg:block sticky top-6'>
    <ul>
      {
        headings.map((heading: any) => (
          <li class='py-1 flex items-start'>
            {/* Indentation based on heading depth */}
            {[...Array(heading.depth - 1)].map((_, _i) => (
              <span class='inline-block w-4' />
            ))}
            
            {/* Different bullet styles based on heading depth */}
            {heading.depth <= 2 ? (
              <span class="w-2.5 h-2.5 bg-dark rounded-none mt-1.5 mr-2 flex-shrink-0" />
            ) : (
              <span class="w-2 h-2 bg-dark rounded-full mt-1.5 mr-2 flex-shrink-0" />
            )}
            
            <a
              class='hover:text-stone transition-all duration-150 ease-in-out text-dark poppins'
              href={`#${heading.slug}`}
            >
              {heading.text}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</aside>